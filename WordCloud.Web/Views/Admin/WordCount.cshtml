@model WordCloud.Application.Words.WordCountDto

@{
    ViewData["Title"] = "Word Count";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Word Cloud</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Word</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Words)
        {
            <tr>
                <td>@item.Word</td>
                <td>@item.Count</td>
            </tr>
        }
    </tbody>
</table>
