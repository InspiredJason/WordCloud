@model WordCloud.Application.Words.WordCloudDto
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the World Famous Word Cloud</h1>
</div>
<input type="hidden" id="hdJsonWords" value='@Html.Raw(Model?.JsonWords)' />
<div id="Content-Wrapper-Small">

    <div id="Content">
        @using (Html.BeginForm("GetContent", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="pure-g push-m-r-l-standard">
                <div class="pure-u-1 pure-u-sm-2-3 pure-u-md-17-24">
                    <div class="form-group">
                        <label asp-for="Url"></label>
                        <input asp-for="Url" class="form-control" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                    <div class="section" style="margin-bottom: 5px;">
                        <div class="pure-g">
                            <div class="pure-u-1 pure-u-sm-1 pure-u-md-1">
                                <div class="button-secure">
                                    <input type="submit" id="BtnSubmit" class="pure-button button-primary" data-pid="39594" data-link-name="book_button" value="Get Content" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>
    <div id="chartdiv"></div>

</div>

@section Scripts {

    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}

